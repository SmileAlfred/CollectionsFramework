<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.collectionsframework.c4xutils3.XUtils3MainActivity">

    <!--标题栏-->
    <include layout="@layout/titlebar" />

    <Button
        android:id="@+id/btn_annotation"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_margin="5dp"
        android:textSize="26sp"
        android:layout_height="wrap_content"
        android:text="xUtils3注解模块"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_net"
        android:textSize="26sp"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:background="#fff"
        android:layout_height="wrap_content"
        android:text="xUtils3联网模块"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_image"
        android:textSize="26sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_margin="5dp"
        android:text="xUtils3加载单张图片/Gif"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_image_list"
        android:background="#fff"
        android:layout_margin="5dp"
        android:textSize="26sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xUtils3加载列表图片"
        android:textAllCaps="false" />
    <TextView
        android:id="@+id/tv_load_list_image_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="8dp"
        android:visibility="gone"
        android:text="注：加载列表图片可以参考其他几个框架，主要方法在getView()中进行"/>

</LinearLayout>
